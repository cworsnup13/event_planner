  <%= text_field_tag(:lastName,current_user.last_name ||= '',:class => "text_field required") %>
  <p class="form_labels">Email</p>
  <%= text_field_tag(:email,current_user.email,:class => "number_field required") %>

  <br>
  <%= submit_tag("Submit") %>
  <p>edit password link </p>
<% end %>

